{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015" ],
    "module": "commonjs",
    "noImplicitAny": false,
    "outDir": "./dist",
    "removeComments": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "target": "es6",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node"
    ]
  },
  "files": [
    "src/server/index.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*.ts"
  ],
  "paths": {
    "*": [
      "node_modules/@types/*",
      "./src/server/types/*"
    ]
  }
}
